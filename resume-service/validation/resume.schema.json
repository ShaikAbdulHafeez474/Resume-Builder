
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Resume",
  "type": "object",
  "properties": {
    "sections": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "object",
          "properties": {
            "title": { "type": "string" },
            "items": {
              "type": "array",
              "items": { "type": "object" }
            }
          },
          "required": ["title", "items"],
          "additionalProperties": true
        }
      },
      "minProperties": 1
    }
  },
  "required": ["sections"],
  "additionalProperties": false
}
